extends layout.pug

block content
  .container
    h4 Input Data Diri
    span silahkan di input sesuai dengan data diri masing masing 
  br
  div
  .container
    .row.justify-content-center
      .col-md-8
        .card
          .card-header Input Data Diri
          .card-body
            form.form-horizontal(method='post' action='/karyawan/create')
              .mb-3
                div.row
                  div.col-md-3
                    label.form-label.control-label(for='nama') Nama
                  div.col-md-9
                    input#nama.form-control(type='text' name='nama')
              .mb-3
                div.row
                  div.col-md-3
                    label.form-label.control-label(for='email') Email
                  div.col-md-9
                   input#email.form-control(type='email' name='email')
              .mb-3
                div.row
                  div.col-md-3
                    label.form-label.control-label(for='divisi') Divisi
                  div.col-md-9
                   input#divisi.form-control(type='text' name='divisi')
              .mb-3
                div.row
                  div.col-md-3
                    label.form-label.control-label(for='id_karyawan') ID Karyawan
                  div.col-md-9
                   input#id_karyawan.form-control(type='text' name='id_karyawan')
              .mb-3
                div.row
                  div.col-md-3
                    label.form-label.control-label(for='nomor_hp') Nomor HP
                  div.col-md-9
                   input#nomor_hp.form-control(type='text' name='nomor_hp')
              .mb-3
                div.row
                  div.col-md-3
                    label.form-label.control-label(for='alamat') Alamat
                  div.col-md-9
                   input#alamat.form-control(type='text' name='alamat')
              .mb-3
                div.row
                  div.col-md-3
                    label.form-label.control-label(for='nik') NIK
                  div.col-md-9
                   input#nik.form-control(type='number' name='nik')
              .mb-3
                div.row
                  div.col-md-3
                    label.form-label.control-label(for='gdarah') Gologan Darah
                  div.col-md-1
                    input(type='radio',name='gdarah',value ='A')
                    print A
                  div.col-md-1
                    input(type='radio',name = 'gdarah',value ='A')
                    print B
                  div.col-md-1
                    input(type='radio',name = 'gdarah',value ='O')
                    print O
                  div.col-md-1
                    input(type='radio',name = 'gdarah',value ='AB')
                    print AB
              .mb-3
                div.row
                  div.col-md-3
                    label.form-label.control-label(for='npwp') NPWP
                  div.col-md-9
                   input#npwp.form-control(type='number' name='npwp')
              .mb-3
                button.btn.btn-primary(type='submit') Input
        br
        .mb-2
          a.btn.btn-primary(href="/karyawan/read") View            